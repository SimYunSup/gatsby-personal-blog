---
import { Image } from 'astro:assets';
import { LinkButton } from '@astrojs/starlight/components';

const PAGE_TITLE_ID = '_top';
const { lang } = Astro.props;
const { data } = Astro.props.entry;
const { title = data.title, tagline, image, actions = [] } = data.hero || {};
const date = new Date(data.date);
const isEdited = date !== undefined
	&& data.lastUpdated
	&& date?.getTime() !== (data.lastUpdated as Date)?.getTime();

const imageAttrs = {
	loading: 'eager' as const,
	decoding: 'async' as const,
	width: 400,
	height: 400,
	alt: image?.alt || '',
};

let darkImage: ImageMetadata | undefined;
let lightImage: ImageMetadata | undefined;
let rawHtml: string | undefined;
if (image) {
	if ('file' in image) {
		darkImage = image.file;
	} else if ('dark' in image) {
		darkImage = image.dark;
		lightImage = image.light;
	} else {
		rawHtml = image.html;
	}
}
---

<div class="hero">
	{rawHtml && <div class="hero-html sl-flex" set:html={rawHtml} />}
	<div class="sl-flex stack">
		<div class="sl-flex copy">
			<h1 id={PAGE_TITLE_ID} data-page-title set:html={title} />
			{tagline && <div class="tagline" set:html={tagline} />}
			<div>
				{(new Date(date)).toLocaleDateString(lang, { dateStyle: 'medium', timeZone: 'UTC' })}
				{isEdited && <span>(수정 {data.lastUpdated.toLocaleDateString(lang, { dateStyle: 'medium', timeZone: 'UTC' })})</span>}
			</div>
		</div>

	{
		darkImage && (
			<Image
				src={darkImage}
				{...imageAttrs}
				class:list={{ 'light:sl-hidden': Boolean(lightImage) }}
			/>
		)
	}
	{lightImage && <Image src={lightImage} {...imageAttrs} class="dark:sl-hidden" />}
		{
			actions.length > 0 && (
				<div class="sl-flex actions">
					{actions.map(
						({ attrs: { class: className, ...attrs } = { class: '' }, icon, link: href, text, variant }) => (
							<LinkButton {href} {variant} icon={icon?.name} class:list={[className]} {...attrs}>
								{text}
								{icon?.html && <Fragment set:html={icon.html} />}
							</LinkButton>
						)
					)}
				</div>
			)
		}
	</div>
</div>

<style>
	.hero {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding-bottom: 1rem;
	}
	:root[data-theme="light"] .hero > div > img {
		border: 1px solid var(--sl-color-white);
	}
	.hero > div > img,
	.hero > .hero-html {
		border-radius: 8px;
		object-fit: contain;
		width: min(70%, 500px);
		height: auto;
		margin-inline: auto;
	}

	.stack {
		width: 100%;
		flex-direction: column;
		gap: clamp(1.5rem, calc(1.5rem + 1vw), 2rem);
		text-align: center;
	}

	.copy {
		flex-direction: column;
		gap: 1rem;
		align-items: center;
	}

	.copy > * {
		max-width: 50ch;
	}

	h1 {
		font-size: clamp(var(--sl-text-2xl), calc(0.25rem + 2vw), var(--sl-text-4xl));
		line-height: var(--sl-line-height-headings);
		font-weight: 600;
		color: var(--sl-color-white);
	}

	.tagline {
		font-size: clamp(var(--sl-text-base), calc(0.0625rem + 1vw), var(--sl-text-xl));
		color: var(--sl-color-gray-2);
	}

	.actions {
		gap: 1rem 2rem;
		flex-wrap: wrap;
		justify-content: center;
	}

	@media (min-width: 50rem) {

		.hero > img,
		.hero > .hero-html {
			order: 2;
			width: min(100%, 25rem);
		}

		.stack {
			text-align: start;
		}

		.copy {
			align-items: flex-start;
		}

		.actions {
			justify-content: flex-start;
		}
	}
</style>
